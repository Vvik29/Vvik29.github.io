{
  "version": 2,
  "name": "mysite",
  "alias": ["www.mysite.com", "mysite.com"],
  "env": {
    "API_KEY": "xxxxxx"
  },
  "build": {
    "command": "npm run build",
    "output": "dist"
  },
  "routes": [
    {
      "src": "/api/*",
      "dest": "https://my-api.com/:splat"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/:splat"
    }
  ],
  "files": [
    "public/**/*",
    "src/**/*",
    "!src/tests/**/*"
  ]
}
